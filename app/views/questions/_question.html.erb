<div class="container">
    <% @questions.each do |question| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to question.que, question_path(question), class: "text-success" %></h5>
                        <p class="card-text"><%= truncate(question.ans, length: 100)%></p>
                        <%= link_to 'View', question_path(question), class: "btn btn-outline-success"%>
                        <%= link_to 'Answer it!', edit_question_path(question), class: "btn btn-outline-info"%>
                        <%= link_to 'Delete', question_path(question), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you Sure?"}%>
                        
                    </div>
                    <div class="card-footer text-muted">
                        <small> created <%=time_ago_in_words(question.created_at) %>ago,
                        edited <%=time_ago_in_words(question.updated_at)%> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end%>
</div>




