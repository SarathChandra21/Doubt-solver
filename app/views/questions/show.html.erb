
<h1 class="text-center mt-4"><%= @question.que%></h1>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by  Sarath Chandra 
                </div>
                <div class="card-body">
                    <div class="card-text text-left"><%= simple_format(@question.ans) %></div>
                    <%= link_to 'Edit', edit_question_path(@question), class: "btn btn-outline-info"%>
                    <%= link_to 'Delete', question_path(@question), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you Sure?"}%>
                </div>
                <div class="card-footer text-muted">
                    <small> posted <%=time_ago_in_words(@question.created_at) %> ago,
                    updated <%=time_ago_in_words(@question.updated_at)%> ago
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>