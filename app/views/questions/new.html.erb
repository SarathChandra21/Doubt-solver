
<h1 class="text-center mt-4">Ask your question</h1>

<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' , obj: @question%>
            <%= form_with(model: @question, class: "shadow p-3 mb-3 bg-info rounded",local: true ) do |f| %>
                <div class="form-group row">
                    <%= f.label :Question, class: "col-2 col-form-label text-light"%> 
                    <div class="col-10">
                        <%= f.text_area :que, rows:5, class: "form-control shadow rounded", placeholder: "Write your question"%>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :Topics, class: "col-2 col-form-label text-light" %> 
                    <div class="col-10">
                        <%= f.collection_select(:topic_ids, Topic.all, :id, :name, {:prompt => "Please select the topics related to the question"}, {:multiple => true, size: 4, class: "custom-select shadow rounded"}) %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.check_box :notify_me , class: "shadow rounded"%>
                    <%= f.label "Notify me when answered" , class: "text-light"%> 
                </div>
        

                <div class="form-group row justify-content-center">
                    <%= f.submit "Ask", class:"btn btn-outline-light btn-lg"%>
                </div>
            <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ redirecting to questions page ]', questions_path, class: "text-info"%>
        </div>
    </div>
</div>
