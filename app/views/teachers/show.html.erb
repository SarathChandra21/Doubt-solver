<% if logged_in_as_teacher? && current_teacher == @teacher %>
    <h1 class="text-center mt-4">Your profile</h1>
<% else %>
    <h1 class="text-center mt-4"><%= @teacher.name%> profile</h1>
<% end %>


<% if logged_in_as_teacher? && current_teacher == @teacher %>
    <div class="text-center mt-4">
        <%= link_to "Edit your profile", edit_teacher_path(@teacher), class: "btn btn-outline-info" %>
    </div>
<% end %>

<h3 class="text-center mt-4"> <%= @teacher.questions.count %> questions solved </h3>

<div class="flickr_pagination">
    <%= will_paginate @questions, :container => false %>
</div>

<%= render 'question' %>

<div class="flickr_pagination mb-4">
    <%= will_paginate @questions, :container => false %>
</div>