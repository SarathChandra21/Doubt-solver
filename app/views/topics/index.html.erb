<h1 class="text-center mt-4">Topics</h1>

<div class="flickr_pagination">
    <%= will_paginate @topics, :container => false %>
</div>

<div class="container">
    <div class="row justify-content-md-center">
        <% @topics.each do |topic| %>     
                <div class="col-4 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="mt-4 text-center card-img-top">
                            <%= image_tag("topics/#{topic.name.downcase}.jpg", class: "rounded mx-auto d-block center", :size => "250x180")%>
                        </div>  
                        <div class="card-body">

                            <h5 class="card-title"><%= link_to topic.name, topic_path(topic), class: "text-success" %></h5>
                            <p class="card-text"><%= pluralize(topic.questions.count, "questions") %></p>
                        </div>
                        
                    </div>
                </div>
        <% end%>
    </div>
</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @topics, :container => false %>
</div>




